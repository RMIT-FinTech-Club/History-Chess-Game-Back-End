{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "server.ts",
    "prisma/seedNeon.ts",
    "src/types/**/*"  // Ensure this line is present
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}