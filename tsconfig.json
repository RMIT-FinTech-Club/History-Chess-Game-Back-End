{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "server.ts",
    "src/prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}